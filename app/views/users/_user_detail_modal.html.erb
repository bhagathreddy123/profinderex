<%= turbo_frame_tag :remote_modal, target: :_top do %>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">User Details:</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <p class="lead"><strong>Name:<%= @user.name %></strong></p>
            <p class="lead"><strong>Email:<%= @user.email %></strong></p>
            <p class="lead"><strong>City:<%= @user.city %></strong></p>
            <p class="lead"><strong>State:<%= @user.state %></strong></p>
            <p class="lead"><strong>Country:<%= @user.country %></strong></p>
            <p class="lead"><strong>Contact:<%= @user.contact_number %></strong></p>
          </div>
        </div>
        <div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
        </div>    
      </div>
    </div>
  </div>
<% end %>